<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CinemaSuggest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>

    <style name="GenreButton">
        <item name="android:layout_margin">1dp</item>
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:radius">0dp</item>
        <item name="android:shape">rectangle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GenreButtonHighlighted">
        <item name="android:layout_margin">2dp</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:radius">0dp</item>
        <item name="android:shape">rectangle</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>