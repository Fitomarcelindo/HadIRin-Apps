<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash.SplashActivity">

    <ImageView
        android:id="@+id/hadirin"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="100dp"
        android:src="@drawable/hadirin" />

    <ImageView
        android:id="@+id/ir_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="85dp"
        android:src="@drawable/logo_ir" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hadirin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:indeterminate="true"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:indeterminateTint="@color/blue1"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hadirin"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:text="@string/version_app"
        android:textColor="@color/blue1"
        android:fontFamily="@font/intervariablefontopszwgh"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
